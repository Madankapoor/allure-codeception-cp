{
    "name": "mkapoor/allure-codeception-custom",
    "description": "A fork of the Codeception adapater for Allure report which works with huge no of test cases including BDD. ",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Madan Kapoor",
            "email": "madankapoor10@gmail.com"
        }
    ],
    "require": {
	    "php": ">=7.1.3",
        "ext-json": "*",
        "codeception/codeception": "^2.5 | ^3 | ^4",
        "allure-framework/allure-php-api": "^1.3",
        "symfony/filesystem": "^2.7 | ^3 | ^4 | ^5",
        "symfony/finder": "^2.7 | ^3 | ^4 | ^5"
    },
    "require-dev": {
        "ext-dom": "*",
        "phpunit/phpunit": "^7.2 | ^8 | ^9"
    },
    "autoload": {
        "psr-0": {
            "Yandex": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yandex\\Allure\\Codeception\\": [
                "test/report/",
                "test/unit/"
            ]
        }
    },
    "scripts": {
        "test-report": [
            "vendor/bin/codecept run --no-exit --report",
            "vendor/bin/phpunit --testsuite=report"
        ],
        "test": [
            "@test-report"
        ]
    }
}
